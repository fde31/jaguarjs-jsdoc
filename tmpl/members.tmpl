<?js
var data = obj;
var self = this;
var typeSignature = '';

if (data.type && data.type.names) {
    var names = [];
    data.type.names.forEach(function(name) {
        names.push(self.linkto(name, ':' + name));
    });
    typeSignature = '<span class="type-signature">' + names.join('|') + '</span>';
}
?>
<dt>
    <div class="nameContainer">
        <h4 class="name" id="<?js= id ?>"><?js=(data.scope === 'static' ? longname : name)  + typeSignature ?></h4>
        <?js= data.attribs ?>
    </div>

    <?js if (data.summary) { ?>
    <p class="summary"><?js= summary ?></p>
    <?js } ?>
</dt>
<dd>
    <?js if (data.description) { ?>
    <div class="description">
        <?js= data.description ?>
    </div>
    <?js } ?>

    <?js= this.partial('details.tmpl', data) ?>

    <?js if (data.examples && examples.length) { ?>
        <h5>Example<?js= examples.length > 1? 's':'' ?></h5>
        <?js= this.partial('examples.tmpl', examples) ?>
    <?js } ?>
</dd>
